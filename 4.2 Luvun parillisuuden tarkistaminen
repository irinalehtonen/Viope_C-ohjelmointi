/* Tee ohjelma, joka pyytää käyttäjältä kokonaisluvun ja tarkistaa, 
onko luku parillinen vai pariton. Jos syötetty luku on parillinen, 
tulostetaan arvo 0, jos luku on pariton, tulostetaan arvo 1. */

#include <stdio.h>

int main()
{
	int kokonaisluku, parillinen_vai_pariton;
	
	printf("Anna kokonaisluku :");
	scanf("%d", &kokonaisluku);

	parillinen_vai_pariton = kokonaisluku % 2;
	
	if(parillinen_vai_pariton != 0) {
	printf("Luku on 1", kokonaisluku);
	} 
	else if(parillinen_vai_pariton != 1) {
	printf("Luku on 0", kokonaisluku);
	}
	else {
	printf("Luku on 1", parillinen_vai_pariton);
	}
	return 0;
}
